<div class="flexbox_forms">

    <form action="/missions" method="POST">
        <h3 class="form_title">Add Data</h3>

        <div class="form_group">
            <label for="name">Name</label>
            <input required value="" type="text" name="name" id="name"></input>
        </div>

        <div class="form_group">
            <label for="description">Description</label>
            <textarea required name="description" id="description"></textarea>
        </div>

        <div class="form_group">
            <label for="launch_date">Launch Date</label>
            <input required value="" type="text" name="launch_date" id="launch_date"></input>
        </div>

        <div class="form_group">
            <label for="successful_completion">Successfully Completed</label>
            <input type="checkbox" name="successful_completion" id="successful_completion"></input>
        </div>

        <div class="form_group">

            <label for="organization_select">Organization</label>
            <select name="organization_select">

                <option value="1">The National Aeronautics and Space Administration</option>
                <option value="2">The Latin American and Caribbean Space Agency</option>
                <option value="3">The South African National Space Agency</option>
                
            </select>          
        </div>

        <button type="submit">Add</button>
        <button type="reset">Clear</button>
    </form>


    <form action="/missions?_method=PUT" method="POST">
        <h3 class="form_title">Update Data</h3>

        <p></p>

        <div class="form_group">
            <label for="mission_select">Mission</label>
            <select name="mission_select">

                <option value="1">Parkinson Investigation</option>
                <option value="2">Life Search on Europa</option>
                <option value="3">Asteroid Belt Mining</option>
                <option value="4">Untitled Venus Terraforming Project</option>
                
            </select>
        </div>

        <div class="form_group">
            <label for="name">Name</label>
            <input value="" type="text" name="name" id="name"></input>
        </div>

        <div class="form_group">
            <label for="description">Description</label>
            <textarea name="description" id="description"></textarea>
        </div>

        <div class="form_group">
            <label for="launch_date">Launch Date</label>
            <input value="" type="text" name="launch_date" id="launch_date"></input>
        </div>

        <div class="form_group">
            <label for="successful_completion">Successfully Completed</label>
            <input type="checkbox" name="successful_completion" id="successful_completion"></input>
        </div>

        <div class="form_group">

            <label for="organization_select">Organization</label>
            <select name="organization_select">

                <option value="1">The National Aeronautics and Space Administration</option>
                <option value="2">The Latin American and Caribbean Space Agency</option>
                <option value="3">The South African National Space Agency</option>
                
            </select>          
        </div>

        <button type="submit">Update</button>
        <button type="reset">Clear</button>
    </form>


    <form action="/missions?_method=DELETE" method="POST">
        <h3 class="form_title">Delete Data</h3>

        <div class="form_group">

            <label for="mission_select">Mission</label>
            <select name="mission_select">

                <option value="1">Parkinson Investigation</option>
                <option value="2">Life Search on Europa</option>
                <option value="3">Asteroid Belt Mining</option>
                <option value="4">Untitled Venus Terraforming Project</option>
                
            </select>

        </div>

        <button type="submit">Delete</button>
        <button type="reset">Clear</button>
    </form>

    <form action="/missions/search" method="GET">
        <h3 class="form_title">Search Data</h3>

        <p>Search for missions by name:</p>

        <div class="form_group">
            <label for="name">Name</label>
            <input value="" type="text" name="name" id="name"></input>
        </div>

        <button type="submit">Search</button>
        <button type="reset">Clear</button>
    </form>

</div>