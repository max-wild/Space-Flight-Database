<p>Organizations information</p>

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Country</th>
    </tr>

    {{#each data}}

        <tr data-id="{{this.organization_id}}">
            <td>{{this.organization_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.country}}</td>
        </tr>

    {{/each}}

