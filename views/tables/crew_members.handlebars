<p>Crew Members information</p>

<table id="data_table" data-entity="crew_members">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Country of Birth</th>
        <th>Birth Date</th>
        <th>Home Base Leader</th>
    </tr>

    {{#each data}}

        <tr data-id="{{this.crew_member_id}}">
            <td>{{this.crew_member_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.birth_country}}</td>
            <td>{{this.birth_date}}</td>
            <td>{{this.home_base_lead}}</td>
        </tr>

    {{/each}}

</table>

<div class="flexbox_forms">

    <form id="add_form">
        <h3 class="form_title">Add a Crew Member</h3>

        <div class="form_group">
            <label for="add_first_name">First Name</label>
            <input value="" type="text" name="first_name" id="add_first_name"></input>
        </div>

        <div class="form_group">
            <label for="add_last_name">Last Name</label>
            <input required value="" type="text" name="last_name" id="add_last_name"></input>
        </div>

        <div class="form_group">
            <label for="add_birth_country">Country of Birth</label>
            <input value="" type="text" name="birth_country" id="add_birth_country"></input>
        </div>

        <div class="form_group">
            <label for="add_birth_date">Birth Date</label>
            <input value="" type="date" name="birth_date" id="add_birth_date"></input>
        </div>

        <div class="form_group">
            <label for="add_home_base_lead">Home Base Leader</label>
            <input value="" type="checkbox" name="home_base_lead" id="add_home_base_lead"></input>
        </div>

        <button type="submit">Add</button>
        <button type="reset">Clear</button>
    </form>


    <form id="update_form">
        <h3 class="form_title">Update a Crew Member</h3>

        <div class="form_group">

            <label for="entry_select_update">Crew Member</label>
            <select name="crew_member_select" class="entry_select" id="entry_select_update">

                <option value="-1">Select a Crew Member</option>

                {{#each data}}

                    <option value="{{this.crew_member_id}}">{{this.first_name}} {{this.last_name}}</option>

                {{/each}}
                
            </select>        
        </div>

        <div class="form_group">
            <label for="update_first_name">First Name</label>
            <input value="" type="text" name="first_name" id="update_first_name"></input>
        </div>

        <div class="form_group">
            <label for="update_last_name">Last Name</label>
            <input required value="" type="text" name="last_name" id="update_last_name"></input>
        </div>

        <div class="form_group">
            <label for="update_birth_country">Country of Birth</label>
            <input value="" type="text" name="birth_country" id="update_birth_country"></input>
        </div>

        <div class="form_group">
            <label for="update_birth_date">Birth Date</label>
            <input value="" type="date" name="birth_date" id="update_birth_date"></input>
        </div>

        <div class="form_group">
            <label for="update_home_base_lead">Home Base Leader</label>
            <input value="" type="checkbox" name="home_base_lead" id="update_home_base_lead"></input>
        </div>

        <button type="submit">Update</button>
        <button type="reset">Clear</button>
    </form>


    <form id="delete_form">
        <h3 class="form_title">Delete a Crew Member</h3>

        <div class="form_group">

            <label for="entry_select_delete">Crew Member</label>
            <select name="crew_member_select" id="entry_select_delete" class="entry_select">

                <option value="-1">Select a Crew Member</option>

                {{#each data}}

                    <option value="{{this.crew_member_id}}">{{this.first_name}} {{this.last_name}}</option>

                {{/each}}
                
            </select>        

        </div>

        <button type="submit">Delete</button>
        <button type="reset">Clear</button>
    </form>

</div>

<script src="/js/entity_CRUD.js"></script>
