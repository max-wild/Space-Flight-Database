<div class="flexbox_forms">

    <form action="/missions" method="POST">
        <h3 class="form_title">Add Data</h3>

        <div class="form_group">
            <label for="mission_id">ID</label>
            <input required value="" type="text" name="mission_id" id="mission_id">
        </div>

        <div class="form_group">
            <label for="name">Name</label>
            <input required value="" type="text" name="name" id="name"></input>
        </div>

        <div class="form_group">
            <label for="description">Description</label>
            <textarea required name="description" id="description"></textarea>
        </div>

        <div class="form_group">
            <label for="launch_date">Launch Date</label>
            <input required value="" type="text" name="launch_date" id="launch_date"></input>
        </div>

        <div class="form_group">
            <label for="successful_completion">Successfully Completed</label>
            <input type="checkbox" name="successful_completion" id="successful_completion"></input>
        </div>

        <button type="submit">Add</button>
        <button type="reset">Clear</button>
    </form>


    <form action="/missions?_method=PUT" method="POST">
        <h3 class="form_title">Update Data</h3>

        <p>Identify the ID, and leave any fields which you don't wish to update blank.</p>

        <div class="form_group">
            <label for="mission_id">ID</label>
            <input required value="" type="text" name="mission_id" id="mission_id">
        </div>

        <div class="form_group">
            <label for="name">Name</label>
            <input value="" type="text" name="name" id="name"></input>
        </div>

        <div class="form_group">
            <label for="description">Description</label>
            <textarea name="description" id="description"></textarea>
        </div>

        <div class="form_group">
            <label for="launch_date">Launch Date</label>
            <input value="" type="text" name="launch_date" id="launch_date"></input>
        </div>

        <div class="form_group">
            <label for="successful_completion">Successfully Completed</label>
            <input type="checkbox" name="successful_completion" id="successful_completion"></input>
        </div>

        <button type="submit">Update</button>
        <button type="reset">Clear</button>
    </form>


    <form action="/missions?_method=DELETE" method="POST">
        <h3 class="form_title">Delete Data</h3>

        <p>Identify the ID of what you wish to delete.</p>

        <div class="form_group">
            <label for="mission_id">ID</label>
            <input required value="" type="text" name="mission_id" id="mission_id">
        </div>

        <button type="submit">Delete</button>
        <button type="reset">Clear</button>
    </form>

</div>